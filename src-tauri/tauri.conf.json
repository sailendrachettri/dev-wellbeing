{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Dev Wellbeing",
  "version": "1.5.1",
  "identifier": "com.dev.wellbeing",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5174",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "Dev Wellbeing (Beta)",
        "width": 800,
        "height": 600,
        "resizable": true,
         "visible": false, 
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
